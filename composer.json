{

  "name": "hatcher/hatcher",
  "description": "Php framework using existing components",
  "type": "framework",
  "keywords": ["framework"],
  "homepage": "https://github.com/hatcher-php/hatcher",
  "license": "Fair",

  "authors": [
    {
      "name": "Soufiane GHZAL",
      "homepage": "https://github.com/gsouf"
    }
  ],

  "autoload":{
    "psr-4" : {
      "Hatcher\\"   :   "src/"
    }
  },

  "autoload-dev":{
    "psr-4" : {
      "Hatcher\\Test\\TDD\\"   :   "test/suites/TDD",
      "Hatcher\\Test\\"   :   "test/suites/src"
    }
  },

  "require": {
    "php": ">=5.5.0",

    "pimple/pimple": "~3.0.0",
    "hassankhan/config": "~0.8.2",
    "psr/http-message" : "1.0",
    "filp/whoops": "2.0.x-dev",
    "aura/router"      : "~3.0.0",
    "zendframework/zend-diactoros": "~1.2.0",


    "nette/mail": "~2.3.4",
    "aura/session": "~2.0.1",
    "twig/twig": ">=1.14",
    "relay/relay": "~1.0.0",
    "matthiasmullie/scrapbook": "dev-master"

  },

  "require-dev":{
    "phpunit/phpunit": "~4.8.19",
    "squizlabs/php_codesniffer": "~2",
    "sebastian/phpcpd": "~2.0.2",
    "danielstjules/pho": "~1.1.1"
  }
}
